                android:textColor="#fca40a"
                android:textSize="20sp" />

        </LinearLayout>
                    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp" >

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="幸运颜色："
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_lucky_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="浅蓝色"
                android:textColor="#fca40a"
                android:textSize="20sp" />

        </LinearLayout>
                    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp" >

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="幸运数字："
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_lucky_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="#fca40a"
                android:textSize="20sp" />

        </LinearLayout>
                    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp" >

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="速配星座："
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_match_constellation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="处女座"
                android:textColor="#fca40a"
                android:textSize="20sp" />

        </LinearLayout>
                    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp" >

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="短评："
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_short_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="成熟打扮能为你加分"
                android:textColor="#889ae8"
                android:textSize="20sp" />

        </LinearLayout>
    </LinearLayout>
<TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="#afdaf3"
        android:text="" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:text="整体运势"
        android:textColor="#2b1cf3"
        android:textSize="17sp" />

<TextView
    android:id="@+id/tv_txt_total"
    android:layout_width="wrap_content"
    android:layout_margin="2dp"
    android:layout_height="wrap_content"
    android:textSize="17sp"
    android:text="今天与另一半交流增多，互动良好，彼此的感情变得更加甜蜜，但其中还是会发生一些小矛盾；工作上信心十足，心情阳光，职场异性助力强；钱财乃身外之物，只要高兴，花多少钱都没问题，尽管吃喝玩乐就好。" />

  <TextView
        android:id="@+id/textView6"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="爱情运势"
        android:textColor="#f3340e"
        android:textSize="17sp" />
<TextView
    android:id="@+id/tv_txt_love"
    android:layout_width="wrap_content"
    android:layout_margin="2dp"
    android:layout_height="wrap_content"
    android:textSize="17sp"
    android:text="魅力独特，对异性吸引力强。"
    ></TextView>

  <TextView
        android:id="@+id/textView6"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="事业学业"
        android:textColor="#ae1beb"
        android:textSize="17sp" />
<TextView
    android:id="@+id/tv_txt_study"
    android:layout_width="wrap_content"
    android:layout_margin="2dp"
    android:layout_height="wrap_content"
    android:textSize="17sp"
    android:text="适合洽谈工作，成功的机率很高。"
    ></TextView>

  <TextView
        android:id="@+id/textView6"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="财富运势"
        android:textColor="#f03af2"
        android:textSize="17sp" />
<TextView
    android:id="@+id/tv_txt_wealth"
    android:layout_width="wrap_content"
    android:layout_margin="2dp"
    android:layout_height="wrap_content"
    android:textSize="17sp"
    android:text="投资上要多听他人意见，不要盲目进行。"
    ></TextView>

  <TextView
        android:id="@+id/textView6"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="健康运势"
        android:textColor="#0dce51"
        android:textSize="17sp" />
<TextView
    android:id="@+id/tv_txt_health"
    android:layout_width="wrap_content"
    android:layout_margin="2dp"
    android:layout_height="wrap_content"
    android:textSize="17sp"
    android:text="心情愉悦，身体状态正常。"
    ></TextView>
</LinearLayout>



</LinearLayout>
</ScrollView>